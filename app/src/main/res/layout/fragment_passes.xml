<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/passes_top_bar"
        style="@style/ToolbarCard"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">

        <ImageButton
            android:id="@+id/passes_refresh_btn"
            style="@style/ToolbarButton"
            android:rotation="45"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_refresh" />

        <TextView
            android:id="@+id/passes_timer"
            style="@style/ToolbarTimer"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/passes_map_btn"
            style="@style/ToolbarButton"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_world" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/SurfaceCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="64dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/passes_recycler"
            style="@style/AppRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/passes_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/passes_error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/passes_error"
            android:textSize="@dimen/text_size_large"
            android:visibility="invisible" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/passes_bottomBar"
        style="@style/BottomAppBar">

        <Button
            android:id="@+id/passes_filter_btn"
            style="@style/AppButton"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="Filter"
            app:icon="@drawable/ic_filter" />

        <Button
            android:id="@+id/passes_settings_btn"
            style="@style/AppButton"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="Настройки"
            app:icon="@drawable/ic_prefs"
            app:iconGravity="end" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/passes_fab"
        style="@style/FloatingActionButton"
        android:src="@drawable/ic_sputnik"
        app:layout_anchor="@id/passes_bottomBar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
