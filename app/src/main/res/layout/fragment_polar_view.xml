<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PolarViewFragment">

    <FrameLayout
        android:id="@+id/polar_view_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/polar_azimuth"
        style="@style/PolarViewText"
        android:layout_marginStart="4dp"
        android:text="@string/pat_azimuth"
        app:layout_constraintStart_toStartOf="@+id/polar_view_frame"
        app:layout_constraintTop_toTopOf="@+id/polar_view_frame" />

    <TextView
        android:id="@+id/polar_elevation"
        style="@style/PolarViewText"
        android:layout_marginEnd="4dp"
        android:text="@string/pat_elevation"
        app:layout_constraintEnd_toEndOf="@+id/polar_view_frame"
        app:layout_constraintTop_toTopOf="@+id/polar_view_frame" />

    <TextView
        android:id="@+id/polar_altitude"
        style="@style/PolarViewText"
        android:layout_marginStart="4dp"
        android:text="@string/pat_altitude"
        app:layout_constraintBottom_toBottomOf="@+id/polar_view_frame"
        app:layout_constraintStart_toStartOf="@+id/polar_view_frame" />

    <TextView
        android:id="@+id/polar_range"
        style="@style/PolarViewText"
        android:layout_marginEnd="4dp"
        android:text="@string/pat_range"
        app:layout_constraintBottom_toBottomOf="@+id/polar_view_frame"
        app:layout_constraintEnd_toEndOf="@+id/polar_view_frame" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/polar_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/polar_view_frame" />

    <TextView
        android:id="@+id/polar_no_trans"
        style="@style/PolarViewText"
        android:layout_marginTop="8dp"
        android:text="@string/no_transmitters"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/polar_view_frame" />
</androidx.constraintlayout.widget.ConstraintLayout>