<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_launcher_background"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/drawer_sat_img"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/drawer_title"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sat_desc_left" />

    <TextView
        android:id="@+id/drawer_title"
        style="@style/DrawerHeader.Title"
        android:layout_marginStart="8dp"
        android:text="@string/drawer_title"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_sat_img"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/drawer_sat_img" />

    <TextView
        android:id="@+id/drawer_lat"
        style="@style/DrawerHeader.Item"
        android:text="@string/drawer_lat_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/drawer_lat_value"
        app:layout_constraintStart_toStartOf="@+id/drawer_title" />

    <TextView
        android:id="@+id/drawer_lat_value"
        style="@style/DrawerHeader.ItemValue"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/pat_location"
        app:layout_constraintStart_toEndOf="@+id/drawer_lat"
        app:layout_constraintTop_toBottomOf="@+id/drawer_sat_img" />

    <TextView
        android:id="@+id/drawer_lon"
        style="@style/DrawerHeader.Item"
        android:text="@string/drawer_lon_text"
        app:layout_constraintStart_toStartOf="@+id/drawer_lat"
        app:layout_constraintTop_toBottomOf="@+id/drawer_lat" />

    <TextView
        android:id="@+id/drawer_lon_value"
        style="@style/DrawerHeader.ItemValue"
        android:layout_marginStart="8dp"
        android:text="@string/pat_location"
        app:layout_constraintBaseline_toBaselineOf="@+id/drawer_lon"
        app:layout_constraintStart_toEndOf="@+id/drawer_lon" />

    <ImageButton
        android:id="@+id/drawer_btn_loc"
        style="@style/DrawerHeader.Button"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/ic_update_loc"
        app:layout_constraintBottom_toTopOf="@+id/drawer_btn_tle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawer_lon_value" />

    <TextView
        android:id="@+id/drawer_tv_loc"
        style="@style/DrawerHeader.ButtonText"
        android:layout_marginStart="8dp"
        android:text="@string/update_loc"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_btn_loc"
        app:layout_constraintStart_toEndOf="@+id/drawer_btn_loc"
        app:layout_constraintTop_toTopOf="@+id/drawer_btn_loc" />

    <ImageButton
        android:id="@+id/drawer_btn_tle"
        style="@style/DrawerHeader.Button"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/ic_update_tle"
        app:layout_constraintBottom_toTopOf="@+id/drawer_btn_trans"
        app:layout_constraintStart_toStartOf="@+id/drawer_btn_loc"
        app:layout_constraintTop_toBottomOf="@+id/drawer_btn_loc" />

    <TextView
        android:id="@+id/drawer_tv_tle"
        style="@style/DrawerHeader.ButtonText"
        android:text="@string/update_tle"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_btn_tle"
        app:layout_constraintStart_toStartOf="@+id/drawer_tv_loc"
        app:layout_constraintTop_toBottomOf="@+id/drawer_btn_loc" />

    <ImageButton
        android:id="@+id/drawer_btn_trans"
        style="@style/DrawerHeader.Button"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/ic_update_trans"
        app:layout_constraintBottom_toTopOf="@+id/drawer_btn_github"
        app:layout_constraintStart_toStartOf="@+id/drawer_btn_tle"
        app:layout_constraintTop_toBottomOf="@+id/drawer_btn_tle" />

    <TextView
        android:id="@+id/drawer_tv_trans"
        style="@style/DrawerHeader.ButtonText"
        android:text="@string/update_trans"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_btn_trans"
        app:layout_constraintStart_toStartOf="@+id/drawer_tv_tle"
        app:layout_constraintTop_toBottomOf="@+id/drawer_btn_tle" />

    <ImageButton
        android:id="@+id/drawer_btn_github"
        style="@style/DrawerHeader.Button"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/ic_goto_github"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/drawer_btn_trans"
        app:layout_constraintTop_toBottomOf="@+id/drawer_btn_trans" />

    <TextView
        android:id="@+id/drawer_tv_github"
        style="@style/DrawerHeader.ButtonText"
        android:text="@string/goto_github"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_btn_github"
        app:layout_constraintStart_toStartOf="@+id/drawer_tv_trans"
        app:layout_constraintTop_toBottomOf="@+id/drawer_btn_trans" />

    <ImageButton
        android:id="@+id/drawer_btn_exit"
        style="@style/DrawerHeader.Button"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/ic_exit_app"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_btn_github"
        app:layout_constraintStart_toEndOf="@+id/drawer_tv_github"
        app:layout_constraintTop_toTopOf="@+id/drawer_btn_github" />

    <TextView
        android:id="@+id/drawer_tv_exit"
        style="@style/DrawerHeader.ButtonText"
        android:layout_marginStart="8dp"
        android:text="@string/exit_app"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_btn_exit"
        app:layout_constraintStart_toEndOf="@+id/drawer_btn_exit"
        app:layout_constraintTop_toTopOf="@+id/drawer_btn_exit" />

</androidx.constraintlayout.widget.ConstraintLayout>
