<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/entries_top_bar"
        style="@style/ToolbarCard"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">

        <ImageButton
            android:id="@+id/entries_back_btn"
            style="@style/ToolbarButton"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_back" />

        <EditText
            android:id="@+id/entries_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="52dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="@string/entries_search_hint"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="text"
            android:textColor="@color/themeAccent"
            android:textColorHint="@color/themeAccent"
            android:textSize="@dimen/text_size_large" />

        <ImageButton
            android:id="@+id/entries_modes_btn"
            style="@style/ToolbarButton"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_satellite" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/SurfaceCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="64dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/entries_recycler"
            style="@style/AppRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/entries_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/entries_bottom_bar"
        style="@style/BottomAppBar">

        <Button
            android:id="@+id/entries_select_btn"
            style="@style/AppButton"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="Select"
            app:icon="@drawable/ic_checkbox" />

        <Button
            android:id="@+id/entries_clear_btn"
            style="@style/AppButton"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="Clear"
            app:icon="@drawable/ic_checkbox_out"
            app:iconGravity="end" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/entries_accept_btn"
        style="@style/FloatingActionButton"
        android:src="@drawable/ic_play"
        app:layout_anchor="@id/entries_bottom_bar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
