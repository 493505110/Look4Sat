<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Ground station location">
        <SwitchPreference
            android:defaultValue="true"
            android:disableDependentsState="true"
            android:key="DEVICE_LOCATION"
            android:summary="@string/device_location_summary"
            android:title="Use device location" />
        <EditTextPreference
            android:defaultValue="@string/latitude_def"
            android:dependency="DEVICE_LOCATION"
            android:key="LATITUDE"
            android:summary="@string/latitude_summary"
            android:title="@string/latitude" />
        <EditTextPreference
            android:defaultValue="@string/longitude_def"
            android:dependency="DEVICE_LOCATION"
            android:key="LONGITUDE"
            android:summary="@string/longitude_summary"
            android:title="@string/longitude" />
        <EditTextPreference
            android:defaultValue="@string/height_def"
            android:dependency="DEVICE_LOCATION"
            android:key="HEIGHT"
            android:summary="@string/height_summary"
            android:title="@string/height" />
    </PreferenceCategory>
</PreferenceScreen>