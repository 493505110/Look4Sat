<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/brandLight</item>
        <item name="colorSecondary">@color/brandLight</item>
        <item name="colorSurface">@color/surfaceDark</item>
        <item name="colorError">@color/colorError</item>

        <item name="colorOnPrimary">@color/textOnLight</item>
        <item name="colorOnSecondary">@color/textOnLight</item>
        <item name="colorOnSurface">@color/textOnDark</item>
        <item name="colorOnError">@color/textOnDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DrawerHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textOnDark</item>
    </style>

    <style name="DrawerHeader.Title">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="DrawerHeader.Value">
        <item name="android:textSize">27sp</item>
    </style>

    <style name="DrawerHeader.Item">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
