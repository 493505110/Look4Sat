<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/themeAccent</item>
        <item name="colorSecondary">@color/themeAccent</item>
        <item name="colorSurface">@color/backgroundDark</item>

        <item name="colorOnPrimary">@color/backgroundDark</item>
        <item name="colorOnSecondary">@color/backgroundDark</item>
        <item name="colorOnSurface">@color/themeLight</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CardPassText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CardPassName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/themeAccent</item>
    </style>

    <style name="PolarViewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themeLight</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CardTransText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themeLight</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DialogText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themeAccent</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MapOsmSatInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themeAccent</item>
    </style>

    <style name="MapOsmSatInfo.Name">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MapOsmCopyright">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/themeAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AboutTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themeAccent</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="AboutSubtitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/themeLight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AboutRegular">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themeLight</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
