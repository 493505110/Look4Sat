<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/themeAccent</item>
        <item name="colorSecondary">@color/themeAccent</item>
        <item name="colorSurface">@color/backgroundDark</item>
        <item name="colorError">@color/error</item>

        <item name="colorOnPrimary">@color/darkOnLight</item>
        <item name="colorOnSecondary">@color/darkOnLight</item>
        <item name="colorOnSurface">@color/lightOnDark</item>
        <item name="colorOnError">@color/lightOnDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DrawerHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lightOnDark</item>
    </style>

    <style name="DrawerHeader.Title">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerHeader.Value">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerHeader.Item">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="DrawerHeader.Button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">@color/themeAccent</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/toolbar_aos_in</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/themeAccent</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:src">@drawable/ic_refresh</item>
        <item name="android:backgroundTint">@color/toolbarButton</item>
    </style>

    <style name="CardSatPass">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">104dp</item>
    </style>

    <style name="CardSatPass.SideText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CardSatPass.MaxEl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/themeAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
