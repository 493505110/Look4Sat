<resources>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/themeLight</item>
        <item name="colorSecondary">@color/themeLight</item>
        <item name="colorPrimaryVariant">@color/themeDark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="snackbarStyle">@style/Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Snackbar.Text</item>
    </style>

    <style name="SplashText">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">23sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SplashText.Msg">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SplashText.Icon">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">128dp</item>
    </style>

    <style name="Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/greySurface</item>
    </style>

    <style name="Snackbar.Text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/themeLight</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TopBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="InfoButton">
        <item name="android:backgroundTint">@color/greySurface</item>
        <item name="android:textColor">@color/themeLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconTint">@color/themeLight</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
